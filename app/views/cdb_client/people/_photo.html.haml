- photo ||= nil
- cssclass = "mugshot border-0"
- person ||= photo || @person
- if person
  - if person.thumb.present?
    - style = "background-image: url(\"#{person.thumb}\")"
  - elsif person.original.present?
    - style = "background-image: url(\"#{person.original}\")"
  - else
    - cssclass << " uninvited"
    - style = "background-image: url(#{image_url('missing/user.png')})"
  %div{class: cssclass, style: style}
