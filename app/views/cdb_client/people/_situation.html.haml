- person ||= nil
- with_country ||= false

- if person
  %span.situation
    = succeed '.' do
      - if person.post?
        = person.post?
        - if person.institution.present? || person.employer?
          = t :at
      - if person.institution.present?
        = person.institution.definite_name
      - elsif person.employer?
        = person.employer
      - else
        Situation unknown.
